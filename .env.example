# Database connection details
# e.g., localhost, 127.0.0.1, or a managed database endpoint
DATASOURCE_HOST=127.0.0.1
# Default PostgreSQL port is 5432
DATASOURCE_PORT=5432
# e.g., postgres
DATASOURCE_USERNAME=your-db-username
# e.g., securepassword
DATASOURCE_PASSWORD=
# e.g., my_database
POSTGRES_DB=
DATASOURCE_AUTOLOAD_ENTITIES=true

# Caching from nestjs Cache Package
CACHE_TTL=300
CACHE_MAX=100

# Database logging
# Enable logging for debugging (use "true" for development, "false" for production)
DB_LOGGING=false

# Synchronization (only for development, should be false in production)
# Never set this to "true" in production
DB_SYNCHRONIZATION=false

# SSL for database connection
# Enable SSL if using a secure connection (e.g., in the cloud)
DB_SSL=true

# Optional pool configuration (environment-specific)
# Max number of concurrent database connections in the pool
DB_MAX_CONNECTIONS=20
# Timeout for acquiring a connection (in ms)
DB_CONNECTION_TIMEOUT=2000
# Idle connection timeout (in ms)
DB_IDLE_TIMEOUT=30000

# Optional for health checks (can be in code or environment)
# Timeout for health check queries (in ms)
DB_HEALTH_CHECK_TIMEOUT=3000

# Optional logging level (for application-level logs, not specific to DB)
# Application logging level (info, error, debug, etc.)
LOG_LEVEL=info

# Variable list
